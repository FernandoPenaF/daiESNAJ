<Window x:Class="ESNAJ.Torneos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo torneo" Height="308" Width="356">
    <Grid Margin="10,10,10,10">
        <Label Content="Nuevo torneo" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="38,56,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbNombre" HorizontalAlignment="Left" Height="23" Margin="133,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
        <Label Content="Fecha:" HorizontalAlignment="Left" Margin="38,103,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="38,198,0,0" VerticalAlignment="Top" Width="75" Click="btAgregar_Click"/>
        <Label Content="Escuela:" HorizontalAlignment="Left" Margin="38,148,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbEscuelas" HorizontalAlignment="Left" Margin="133,148,0,0" VerticalAlignment="Top" Width="145"/>
        <Button x:Name="btRegresar" Content="Regresar" HorizontalAlignment="Left" Margin="203,198,0,0" VerticalAlignment="Top" Width="75" Click="btRegresar_Click"/>
        <DatePicker x:Name="datepick" HorizontalAlignment="Left" Margin="133,103,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
